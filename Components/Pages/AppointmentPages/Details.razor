@page "/appointments/details"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using SpaAndBeautyWebsite.Data
@using SpaAndBeautyWebsite.Models
@inject IDbContextFactory<SpaAndBeautyWebsite.Data.SpaAndBeautyWebsiteContext> DbFactory
@inject NavigationManager NavigationManager
@attribute [Authorize(Policy = "CustomersOrAbove")]

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Appointment</h2>
    <hr />
    @if (appointment is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Employee Name</dt>
            <dd class="col-sm-10">@EmployeeName</dd>
            <dt class="col-sm-2">Customer Name</dt>
            <dd class="col-sm-10">@CustomerName</dd>
            <dt class="col-sm-2">Service Name</dt>
            <dd class="col-sm-10">@ServiceName</dd>
            <dt class="col-sm-2">Scheduled Date & Time</dt>
            <dd class="col-sm-10">@appointment.ScheduledDateTime</dd>
            <dt class="col-sm-2">Duration (min)</dt>
            <dd class="col-sm-10">@appointment.DurationMinutes</dd>
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@appointment.Status</dd>
            <dt class="col-sm-2">Notes</dt>
            <dd class="col-sm-10">
                @if (string.IsNullOrEmpty(appointment.Notes))
                {
                    <span class="text-muted">No notes provided.</span>
                }
                else
                {
                    @appointment.Notes
                }
            </dd>
        </dl>
        <div>
            @if (appointment.Status != "Completed" && appointment.Status != "Cancelled" && appointment.Status != "No Show")
            {
                <a href="@($"/appointments/edit?appointmentid={appointment.AppointmentId}")">Edit | </a>
            }
            <a href="@($"/appointments")">Back to List</a>
        </div>
    }
</div>

@code {
    private Appointment? appointment;
    private SpaAndBeautyWebsiteContext context = default!;

    // variables to hold the readable names
    private string EmployeeName = "Loading...";
    private string CustomerName = "Loading...";
    private string ServiceName = "Loading...";

    [SupplyParameterFromQuery]
    private int AppointmentId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        appointment = await context.Appointment.FirstOrDefaultAsync(m => m.AppointmentId == AppointmentId);

        if (appointment is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // Look up Employee Name
            var emp = await context.Employee.FindAsync(appointment.EmployeeId);
            EmployeeName = emp != null ? $"{emp.FirstName} {emp.LastName}" : "Unknown Employee";

            // Look up Customer Name
            var cust = await context.Customer.FindAsync(appointment.CustomerId);
            CustomerName = cust != null ? $"{cust.FirstName} {cust.LastName}" : "Unknown Customer";

            // Look up Service Name
            var svc = await context.Service.FindAsync(appointment.ServiceId);
            ServiceName = svc?.Name ?? "Unknown Service";
        }
    }
}
